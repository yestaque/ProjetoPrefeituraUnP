<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CadastroPrefeitura</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CadastroPrefeitura.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;700&display=swap" rel="stylesheet">
   



    <style>
        /* Reset básico */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: Arial, sans-serif;
            background-color: #FFFFFF;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            align-items: center;
            min-height: 100vh;
            position: relative;
        }

        .ellipse-background {
           background: radial-gradient(circle, #059C7B, #036952, #02362B); /* Com três cores */
            width: 976px;
            height: 891px;
            position: absolute;
            top: -323px;
            left: -133px;
            border-radius: 50%;
            opacity: 1.7;
            z-index: -2;
        }

        .ellipse-background-two {
            background: radial-gradient(circle, #059C7B, #036952, #02362B); /* Com três cores */
            width: 976px;
            height: 891px;
            position: absolute;
            top: 294px;
            left: -267px;
            border-radius: 50%;
            opacity: 1.4;
            z-index: -1;
        }

        .border {
            width: 100%;
            background-color: #4CAF50;
            color: #00000040;
            text-align: center;
            padding: 10px 0;
            font-size: 20px;
            font-weight: bold;
            z-index: 1;
            position: relative;
        }

        .container {
            width: 100%; /* Ajuste a largura aqui */
            max-width: 400px;
            padding: 20px;
            background-color: #F7F7F7;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.4);
            border-radius: 8px;
            margin: 80px auto;
            position: absolute;
            right: 160px;
            z-index: 1;
            height: auto;
            
        }

        h2 {
            font-family: 'Poppins', sans-serif; /* Aplicando a fonte Poppins */
            font-size: 32px;
            font-weight: 700;
            line-height: 48px;
            text-align: center;
            color: #57be93; /* Mantendo a cor que você já tinha */
            margin-bottom: 10px; /* Reduzindo a margem */

        }

        h5 {
            text-align: center;
            color: #57be93;
            margin-bottom: 12px; /* Reduzindo a margem */
            font-size: 16px; /* Reduzindo o tamanho da fonte */

        }

        label {
            display: block;
            margin-bottom: 8px;
            color: #005d4a;
        }

        input, select {
            width: 80%; /* Ajuste a largura dos campos */
            max-width: 100%; /* Para não ultrapassar a largura */
            padding: 8px;
            margin-bottom: 15px;
            border: 1px solid #ccc;
            border-radius: 4px;
            font-size: 14px; /* Ajuste do tamanho da fonte */
        }

        button {
            width: 100%;
            padding: 10px;
            background-color: #059C7B;
            border: none;
            border-radius: 4px;
            color: white;
            font-size: 18px;
            cursor: pointer;
        }

        button:hover {
            background-color: #45a049;
        }
        
    </style>
</head>
<body>
    <div class="ellipse-background"></div>
    <div class="ellipse-background-two"></div>

    

    <div class="container">
        <h2>Dados da Prefeitura</h2>
        <h5>Faça já o seu cadastro</h5>
        <form action="/Cadastro/Registrar" method="post">
            <label for="cnpj">CNPJ:</label>
            <input type="text" id="cnpj" name="cnpj" required>

            <label for="cnes">CNES:</label>
            <input type="text" id="cnes" name="cnes" required>

            <label for="endereco">Endereço:</label>
            <input type="text" id="endereco" name="endereco" required>

            <label for="especialidades">Especialidades:</label>
            <input type="text" id="especialidades" name="especialidades" required>

            <label for="numeroConvenio">Número do Convênio:</label>
            <input type="text" id="numeroConvenio" name="numeroConvenio" required>

            <label for="responsavelPrefeitura">Responsável da prefeitura:</label>
            <input type="text" id="responsavelPrefeitura" name="responsavelPrefeitura" required>

            <label for="telefoneResponsavel">Telefone do responsável:</label>
            <input type="tel" id="telefoneResponsavel" name="telefoneResponsavel" required>

            <label for="emailResponsavel">E-mail do responsável:</label>
            <input type="email" id="emailResponsavel" name="emailResponsavel" required>

            <button type="submit">Prosseguir</button>
        </form>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
